<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:showDividers="none">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/title_color"
        android:textSize="19dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp">
        <!--<TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/author_label" android:textColor="@color/label_color" android:paddingLeft="5dp"/>-->
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/info_color"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/pubtime_label"
            android:textColor="@color/label_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/pubtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/info_color"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:padding="4dp"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/summary_color"
        android:textSize="14dp"

        />
</LinearLayout>