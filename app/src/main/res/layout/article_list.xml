<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="none"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    >
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title" android:textSize="18dp"
        android:padding="4dp"
        android:textColor="@color/title_color"
        />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingLeft="5dp" android:layout_marginBottom="3dp">
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/author" android:textColor="@color/info_color"
            android:textSize="12dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/pubtime_label" android:textColor="@color/label_color"
            android:textSize="12dp"
            android:paddingLeft="5dp" android:paddingRight="5dp"/>
        <TextView android:layout_width="wrap_content"
            android:textSize="12dp"
            android:layout_height="match_parent" android:id="@+id/pubtime" android:textColor="@color/info_color"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="5dp" android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imgcover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            ></com.facebook.drawee.view.SimpleDraweeView>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/summary"
            android:textColor="@color/summary_color"
            android:maxLines="6"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            />
    </LinearLayout>

</LinearLayout>