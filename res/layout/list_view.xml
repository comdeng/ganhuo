<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:showDividers="none"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
        >
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/title" android:textSize="18dp"
              android:padding="4dp"
              android:textColor="@color/title_color"
            />
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="5dp">
        <!--<TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/author_label" android:textColor="@color/label_color" android:paddingLeft="5dp"/>-->
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:id="@+id/author" android:textColor="@color/info_color"
                  android:textSize="12dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/pubtime_label" android:textColor="@color/label_color"
                  android:textSize="12dp"
                  android:paddingLeft="5dp" android:paddingRight="5dp"/>
        <TextView android:layout_width="wrap_content"
                  android:textSize="12dp"
                  android:layout_height="match_parent" android:id="@+id/pubtime" android:textColor="@color/info_color"/>
    </LinearLayout>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/summary"
              android:textSize="13dp"
              android:padding="4dp"
              android:textColor="@color/summary_color"
              android:maxLines="3"
              android:ellipsize="end"

            />
</LinearLayout>